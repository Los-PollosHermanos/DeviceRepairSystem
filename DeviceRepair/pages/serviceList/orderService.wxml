<!-- pages/orderService/orderService.wxml -->
<view class="header">
  <text class="header-title">请您确认下单信息</text>
</view>

<view class="order-form">
  <view class="form-item">
    <text>订单描述</text>
    <input type="text" placeholder="请输入订单描述" bindinput="inputRemarks"/>
  </view>
  <view class="form-item">
    <text>地址</text>
    <input type="text" placeholder="请输入服务地址" bindinput="inputAddress"/>
  </view>
  <button class="submit-button" bindtap="submitOrder">提交订单</button>
</view>
